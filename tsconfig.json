{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@easy/comp-tutorial": ["src/index.ts"],
      "style/*": ["src/style/*"], // 设置别名路径
      "@@/*": [".dumi/tmp/*"]
    },
    "target": "ESNext",
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["es5", "dom"],
    "importHelpers": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "lib",
    "skipLibCheck": true
  },
  "include": ["src", "typings.d.ts"],
  "exclude": ["node_modules", "lib", "esm", "dist", "**/__tests__/**", "tests"]
}
